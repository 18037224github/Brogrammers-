from tkinter import *
import os


def register():
    global register_screen
    register_screen = Toplevel(main_screen)
    register_screen.config(background="orange")
    register_screen.title("Register")
    register_screen.geometry("300x300")

    global username
    global password
    global username_entry
    global password_entry
    username = StringVar()
    password = StringVar()

    Label(register_screen, text="Please enter details below", bg="grey").pack()
    Label(register_screen, text="",bg="orange").pack()
    username_lable = Label(register_screen, text="Username * ",bg="grey")
    username_lable.pack()
    username_entry = Entry(register_screen ,textvariable=username)
    username_entry.pack()
    password_lable = Label(register_screen, text="Password * ", bg="grey")
    password_lable.pack()
    password_entry = Entry(register_screen, textvariable=password, show='*')
    password_entry.pack()
    Label(register_screen, text="",bg="orange").pack()
    Button(register_screen, text="Register", width=10, height=1, bg="grey", command=register_user).pack()


def login():
    global login_screen
    login_screen = Toplevel(main_screen)
    login_screen.title("Login")
    login_screen.geometry("300x300")
    login_screen.config(background="orange")
    Label(login_screen, text="Assets Tracking/Disciplinary Action Tracking Services", bg="grey").pack()
    Label(login_screen, text="",bg="orange").pack()

    global username_verify
    global password_verify

    username_verify = StringVar()
    password_verify = StringVar()

    global username_login_entry
    global password_login_entry

    Label(login_screen, text="Username * ",bg="grey").pack()
    username_login_entry = Entry(login_screen, textvariable=username_verify)
    username_login_entry.pack()
    Label(login_screen, text="",bg="orange").pack()
    Label(login_screen, text="Password * ",bg="grey").pack()
    password_login_entry = Entry(login_screen, textvariable=password_verify,show='*')
    password_login_entry.pack()
    Label(login_screen, text="",bg="orange").pack()
    Button(login_screen, text="Login", width=10, height=1, bg="grey",command=login_verify).pack()

def RegisterEmployeeForAssetTracking():
    global RegisterEmployee_screen
    RegisterEmployee_screen=Toplevel(main_screen)
    RegisterEmployee_screen.title("Register Employee")
    RegisterEmployee_screen.config(background="orange")
    RegisterEmployee_screen.geometry("300x300")

    global employeeNumber
    global employeeName
    global employeeAsset

    global employeeNumber_entry
    global employeeName_entry
    global employeeAsset_entry

    employeeNumber = StringVar()
    employeeName = StringVar()
    employeeAsset = StringVar()

    Label(RegisterEmployee_screen, text="Please enter Employee details below", bg="grey").pack()
    Label(RegisterEmployee_screen, text="", bg="orange").pack()
    employeeNumber_lable = Label(RegisterEmployee_screen, text="Employee Number * ", bg="grey")
    employeeNumber_lable.pack()
    employeeNumber_entry = Entry(RegisterEmployee_screen, textvariable=employeeNumber)
    employeeNumber_entry.pack()
    employeeName_lable=Label(RegisterEmployee_screen, text="Employee Name *",bg="grey")
    employeeName_lable.pack()
    employeeName_entry=Entry(RegisterEmployee_screen, textvariable=employeeName)
    employeeName_entry.pack()
    employeeAsset_lable=Label(RegisterEmployee_screen, text="Employee Asset *" ,bg="grey")
    employeeAsset_lable.pack()
    employeeAsset_entry=Entry(RegisterEmployee_screen, textvariable=employeeAsset)
    employeeAsset_entry.pack()
    Label(RegisterEmployee_screen, text="", bg="orange").pack()
    Button(RegisterEmployee_screen, text="Register Employee", width=20,height=1,bg="grey",command=register_Employee).pack()

def RegisterEmployeeDisciplinaryActionTracking():
    global RegisterEmployeeDisciplinaryActionTracking_screen
    RegisterEmployeeDisciplinaryActionTracking_screen=Toplevel(main_screen)
    RegisterEmployeeDisciplinaryActionTracking_screen.title("Register Employee")
    RegisterEmployeeDisciplinaryActionTracking_screen.config(background="orange")
    RegisterEmployeeDisciplinaryActionTracking_screen.geometry("300x300")

    global employeeNumberDA
    global employeeNameDA
    global employeeDA

    global employeeNumberDA_entry
    global employeeNameDA_entry
    global employeeDA_entry

    employeeNumberDA=StringVar()
    employeeNameDA=StringVar()
    employeeDA=StringVar()

    Label(RegisterEmployeeDisciplinaryActionTracking_screen, text="Please enter Employee details below", bg="grey").pack()
    Label(RegisterEmployeeDisciplinaryActionTracking_screen, text="", bg="orange").pack()
    employeeNumberDA_lable = Label(RegisterEmployeeDisciplinaryActionTracking_screen, text="Employee Number *(Add a DA before the number) ", bg="grey")
    employeeNumberDA_lable.pack()
    employeeNumberDA_entry = Entry(RegisterEmployeeDisciplinaryActionTracking_screen, textvariable=employeeNumberDA)
    employeeNumberDA_entry.pack()
    employeeNameDA_lable=Label(RegisterEmployeeDisciplinaryActionTracking_screen, text="Employee Name *",bg="grey")
    employeeNameDA_lable.pack()
    employeeNameDA_entry=Entry(RegisterEmployeeDisciplinaryActionTracking_screen, textvariable=employeeNameDA)
    employeeNameDA_entry.pack()
    employeeDA_lable=Label(RegisterEmployeeDisciplinaryActionTracking_screen, text="Employee's Disciplinary Actions *", bg="grey")
    employeeDA_lable.pack()
    employeeDA_entry=Entry(RegisterEmployeeDisciplinaryActionTracking_screen, textvariable=employeeDA)
    employeeDA_entry.pack()
    Label(RegisterEmployeeDisciplinaryActionTracking_screen, text="", bg="orange").pack()
    Button(RegisterEmployeeDisciplinaryActionTracking_screen, text="Register Employee", width=20,height=1,bg="grey",command=register_EmployeeDA).pack()

def register_user():
    username_info = username.get()
    password_info = password.get()

    file = open(username_info, "w")
    file.write(username_info + "\n")
    file.write(password_info)
    file.close()

    username_entry.delete(0, END)
    password_entry.delete(0, END)

    Label(register_screen, text="Registration Success", bg="grey").pack()

def register_Employee():
    Employee_info1=employeeNumber.get()
    Employee_info2=employeeName.get()
    Employee_info3=employeeAsset.get()

    file=open(Employee_info1,"w")
    file.write(Employee_info1 + "\n")
    file.write(Employee_info2 + "\n")
    file.write(Employee_info3)
    file.close()

    employeeNumber_entry.delete(0, END)
    employeeName_entry.delete(0,END)
    employeeAsset_entry.delete(0,END)

    Label(RegisterEmployee_screen, text="Employee Registered",bg="grey").pack()

def register_EmployeeDA():
    EmployeeDA_info1=employeeNumberDA.get()
    EmployeeDA_info2=employeeNameDA.get()
    EmployeeDA_info3=employeeDA.get()

    file=open(EmployeeDA_info1,"w")
    file.write(EmployeeDA_info1 + "\n")
    file.write(EmployeeDA_info2 + "\n")
    file.write(EmployeeDA_info3)
    file.close()

    employeeNumberDA_entry.delete(0, END)
    employeeNameDA_entry.delete(0, END)
    employeeDA_entry.delete(0, END)

    Label(RegisterEmployeeDisciplinaryActionTracking_screen, text="Employee Registered",bg="grey").pack()

def login_verify():
    username1 = username_verify.get()
    password1 = password_verify.get()
    username_login_entry.delete(0, END)
    password_login_entry.delete(0, END)

    list_of_files = os.listdir()
    if username1 in list_of_files:
        file1 = open(username1, "r")
        verify = file1.read().splitlines()
        if password1 in verify:
            login_success()
        else:
            password_not_recognised()
    else:
        user_not_found()
def Search_verify():
    employeeNumber =employeeNumber_verify.get()
    employeeNumber_entry.delete(0, END)

    list_of_files=os.listdir()
    if employeeNumber in list_of_files:
        file1=open(employeeNumber, "r")
        verify=file1.read().splitlines()
        if employeeNumber in verify:
            search_success()
        else:
         employeeNumber_not_recognised()
def Search_verifyDA():
    employeeNumberDA =employeeNumberDA_verify.get()
    employeeNumberDA_entry.delete(0, END)

    list_of_files=os.listdir()
    if employeeNumberDA in list_of_files:
        file1=open(employeeNumberDA, "r")
        verify=file1.read().splitlines()
        if employeeNumberDA in verify:
            search_successDA()
        else:
         employeeNumberDA_not_recognised()
