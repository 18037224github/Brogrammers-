def main_account_screen():
    global main_screen
    main_screen = Tk()
    main_screen.geometry("300x300")
    main_screen.config(background="orange")
    main_screen.title("Account Login")
    Label(text="Select an option",width="300", height="2",bg="grey").pack()
    Label(text="",bg="orange").pack()
    Button(text="Login", height="2", width="300", bg="grey",command=login).pack()
    Label(text="",bg="orange").pack()
    Button(text="Register User", height="2", width="300",bg="grey" ,command=register).pack()
    Label(text="",bg="orange").pack()

    main_screen.mainloop()
